terraform {
  required_version = ">= 1.0.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.0"
    }
  }

  # Your Terraform Cloud configuration
  cloud {
    organization = "my-remote-backend" # Your Terraform Cloud org

    workspaces {
      name = "first-remote-backend-workspace" # Your workspace name
    }
  }
}

provider "aws" {
  region = "us-east-2" # Matches the region in GitHub Actions workflow
}

provider "kubernetes" {
  host                   = module.eks.cluster_endpoint
  cluster_ca_certificate = base64decode(module.eks.cluster_certificate_authority_data)
  exec {
    api_version = "client.authentication.k8s.io/v1beta1"
    command     = "aws"
    args        = ["eks", "get-token", "--cluster-name", module.eks.cluster_name]
  }
}
